<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            >

                <ImageView
                    android:id="@+id/imageViewEmpresa"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:padding="4dp"
                    />

                <TextView
                    android:id="@+id/textViewEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Aqui va nombre empresa"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/imageViewEmpresa"
                    />

                 <TextView
                     android:id="@+id/textViewMision"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/textViewEmpresa"
                     android:layout_marginLeft="5dp"
                     android:layout_marginTop="5dp"
                     android:paddingRight="15dp"
                     android:text="aqui va la mision"
                     android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                     android:textStyle="bold"
                     android:layout_toRightOf="@id/imageViewEmpresa"
                     />

                 <TextView
                     android:id="@+id/textViewFecha"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@id/textViewMision"
                     android:layout_marginLeft="5dp"
                     android:layout_marginTop="5dp"
                     android:text="Fecha 16-01-2018"
                     android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                     android:textStyle="bold"
                     android:layout_toRightOf="@id/imageViewEmpresa"
                     />

                  <TextView
                      android:id="@+id/textViewAnotaciones"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/imageViewEmpresa"
                      android:text="Anotaciones"
                      android:layout_marginTop="15dp"
                      android:textColor="#000000"
                      />

                    <TextView
                     android:id="@+id/textViewAnotar"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="15dp"
                     android:layout_below="@id/textViewAnotaciones"
                     android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin luctus dolor sapien, in condimentum augue dapibus aliquam. Nulla sit amet nibh dignissim, fringilla lectus at, convallis est. Proin mattis posuere sodales. Vestibulum interdum dictum lobortis. Praesent venenatis nibh vitae ultricies posuere. Vestibulum quis lacus viverra mi fermentum laoreet sed eu urna. Donec ut facilisis metus. Donec lobortis, erat vitae facilisis pharetra, nulla est rhoncus ipsum, non semper ligula metus eget dui. Aliquam condimentum feugiat ex eleifend tincidunt. Curabitur ullamcorper sollicitudin rutrum."
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>